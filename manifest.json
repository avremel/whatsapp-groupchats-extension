{
  "manifest_version": 3,
  "name": "WhatsApp Group Chat Scroller",
  "version": "1.0",
  "description": "Auto-scroll WhatsApp Web group chats with speed control, VIP highlighting, and user blurring",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
